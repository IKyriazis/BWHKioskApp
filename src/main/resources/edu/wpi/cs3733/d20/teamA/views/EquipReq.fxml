   <children>
      <StackPane onMouseClicked="#disableBttns" prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <GridPane onMouseClicked="#disableBttns">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="313.0" minHeight="10.0" prefHeight="297.0" vgrow="ALWAYS" />
                <RowConstraints maxHeight="196.0" minHeight="10.0" prefHeight="103.0" vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <GridPane fx:id="gridReq" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
                  <HBox alignment="CENTER" onMouseClicked="#disableBttns" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                     <children>
                        <GridPane alignment="BOTTOM_CENTER" onMouseClicked="#disableBttns" prefWidth="600.0" HBox.hgrow="NEVER">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
