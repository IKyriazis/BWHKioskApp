<AnchorPane fx:id="rootPane" minWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.d20.teamA.controllers.flower.FlowerServiceController">
   <children>
      <StackPane fx:id="dialogPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <GridPane vgap="25.0">
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="1.7976931348623157E308" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="-Infinity" />
                  <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" />
               </rowConstraints>
               <children>
                  <Label fx:id="headerLabel" text="Flower Inventory">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <GridPane style="-fx-background-color: #FFFFFF;" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                     <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <JFXButton fx:id="adminButton" buttonType="RAISED" onAction="#openAdmin" text="Admin" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="orderButton" buttonType="RAISED" onAction="#placeOrder" text="Place Order" GridPane.columnIndex="1">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </JFXButton>
                        <JFXComboBox fx:id="comboLocation" prefWidth="150.0" />
                     </children>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </GridPane>
         </children>
      </StackPane>
   </children>
</AnchorPane>
