                           <children>
                              <JFXListView fx:id="directionsList" />
                              <HBox fx:id="buttonBox" alignment="CENTER" GridPane.rowIndex="1">
                                 <GridPane.margin>
                                    <Insets bottom="10.0" top="10.0" />
                                 </GridPane.margin>
                                 <children>
                                    <JFXButton fx:id="dirBackButton" onAction="#pressedDirBack" styleClass="button-rounded-left" text="Back" />
                                    <JFXButton fx:id="dirNextButton" onAction="#pressedDirNext" styleClass="button-rounded-right" text="Next" />
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                     </children>
                  </JFXDrawer>
                  <HBox layoutX="948.0" layoutY="568.0" spacing="25.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
                     <children>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
