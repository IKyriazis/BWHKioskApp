<AnchorPane prefHeight="550.0" prefWidth="700.0" minWidth="700" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane layoutX="100.0" layoutY="136.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <JFXTextArea fx:id="txtContentNumber" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="30.0" right="30.0" />
               </GridPane.margin>
            </JFXTextArea>
            <JFXTextArea fx:id="txtContentFlower" editable="false" GridPane.rowIndex="1">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets left="30.0" right="30.0" />
               </GridPane.margin>
            </JFXTextArea>
            <Label text="Flower Type:" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label text="Flower Quantity" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label text="Location:" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
            <JFXTextField fx:id="txtLocation" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets left="30.0" right="30.0" />
               </GridPane.margin>
            </JFXTextField>
            <JFXTextField fx:id="txtMessage" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <GridPane.margin>
                  <Insets left="30.0" right="30.0" />
               </GridPane.margin>
            </JFXTextField>
            <Label text="Message:" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
            <JFXTextField fx:id="txtTotalCost" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets left="30.0" right="30.0" />
               </GridPane.margin>
            </JFXTextField>
             <VBox alignment="TOP_CENTER" spacing="25.0" GridPane.rowIndex="5">
                 <children>
                     <JFXTextField fx:id="txtPrevStat" editable="false" labelFloat="true" maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Previous Status">
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" top="10.0" />
                     </VBox.margin></JFXTextField>
                     <JFXComboBox fx:id="txtNextStat" labelFloat="true" maxWidth="1.7976931348623157E308" promptText="New Status">
                         <VBox.margin>
                             <Insets left="50.0" right="50.0" />
                         </VBox.margin>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     </JFXComboBox>
                     <JFXButton fx:id="changeProgressButton" buttonType="RAISED" onAction="#changeProgress" style="-fx-background-color: white;" text="Change Order Progress">
                         <font>
                             <Font size="14.0" />
                         </font>
                     </JFXButton>
                 </children>
                 <padding>
                     <Insets top="25.0" />
                 </padding>
             </VBox>
            <VBox alignment="TOP_CENTER" spacing="25.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <children>
                  <JFXTextField fx:id="txtPrevEmp" editable="false" labelFloat="true" maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Previous Employee">
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" top="10.0" />
                     </VBox.margin></JFXTextField>
                  <JFXComboBox fx:id="txtNextEmp" labelFloat="true" maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="New Employee">
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                  </JFXComboBox>
                  <JFXButton fx:id="changeEmployeeButton" buttonType="RAISED" onAction="#changeEmployee" style="-fx-background-color: white;" text="Change Assigned Employee">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
               </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </VBox>
         </children>
      </GridPane>
